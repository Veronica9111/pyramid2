<!DOCTYPE html>
<html lang="en">
<head>
    <script src="static/js/jquery.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="static/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="static/css/bootstrap-theme.min.css">

    <!-- Latest compiled and minified JavaScript -->
    <script src="static/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="/static/js/jquery-ui.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/static/css/jquery-ui.min.css">
    <link rel="stylesheet" type="text/css" href="/static/css/jquery-ui-1.10.0.custom.css">

    <style>
        #login-form{
            margin: auto 40%;
            border: 1px lightgrey solid;
            border-radius: 0.5em;
            padding: 1em;
        }

        .form-control{
            margin-top: 1em;
            border-radius: 0.3em !important;
        }

        #login{
            margin-top: 1em;
        }
    </style>

</head>
<body>
    <h1> Hi ${name}</h1>
    <div id='login-form' class="">
        <div class="input-group">
            <input id="username" type="textfield" class="form-control" placeholder="username"/>
            <input id="password" type="password" class="form-control"/>
            <input id="login" type="button" class="btn btn-primary" value="Login"/>
            <a id="register">Register</a>
        </div>
    </div>
    <div id='register-dialog'>
        <table>
            <tr>
                <td>用户名</td>
                <td><input type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon1"></td>
            </tr>
            <tr>
                <td>邮箱</td>
                <td><input type="text" class="form-control" placeholder="邮箱" aria-describedby="basic-addon1"></td>
            </tr>
        </table>
    </div>
    <script>
        $("#login").on('click', function(){
            var name = $("#username").val();
            var password = $("#password").val();
            $.post('/login', {'name': name, 'password': password}, function(data){
                console.log(data);
                if(data.status == 'ok'){
                    console.log(data.roles.indexOf('admin'));
                    if(data.roles.indexOf('admin') != -1){
                        window.location.href = '/manage';
                    }else{
                        window.location.href="/quizzes";
                    }
                }
            });
        });

        $("#register").on('click', function(){
            dialog = $("#register-dialog").dialog({
                autoOpen: false,
                height: 400,
                width: 350,
                modal: true,
                buttons: {
                    "Register": function(){
                        $.post("/register", {"name": $("#name").val(), "mail": $("#mail").val()}, function(data){

                        });
                    }
                },
                close: function(){
                    dialog.dialog("close");
                }
            });
            dialog.dialog("open");
        });
    </script>
</body>
</html>
